<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="real_estate_properties_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form,kanban,calendar,pivot,graph</field>
        <field name="context">{'search_default_state':'1','search_default_partner_id':1,'is_my_property':True}</field>
    </record>

    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offer</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_property_tag_action" model="ir.actions.act_window">
        <field name="name">Property Tag</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">tree,form</field>
    </record>


    <record id="my_property_action" model="ir.actions.act_window">
        <field name="name">My Property</field>
        <field name="res_model">my.property</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_partner_id':1}</field>
    </record>

    
      <menuitem id="menu_real_estate_root" name="Real Estate">
        <menuitem id="menu_real_estate_advertisements" name="Advertisements">
            <menuitem id="menu_real_estate_action" action="real_estate_properties_action"/>
            <menuitem id="menu_real_estate_property_offer" action="estate_property_offer_action"/>
        </menuitem>
    </menuitem>

    <!-- <menuitem id="menu_real_estate_property_type" name="Settings" parent="menu_real_estate_root">
        <menuitem id="menu_real_estate_property_type_action" parent="menu_real_estate_property_type" action="estate_property_type_action"/>
        <menuitem id="menu_real_estate_property_tag_action" parent="menu_real_estate_property_type" action="estate_property_tag_action"/>
    </menuitem>   -->

     <menuitem id="menu_real_estate_root" name="Real Estate">
        <menuitem id="menu_real_estate_property_type" name="Settings">
            <menuitem id="menu_real_estate_property_type_action" action="estate_property_type_action"/>
            <menuitem id="menu_real_estate_property_tag" action="estate_property_tag_action"/>
        </menuitem>
    </menuitem>

    <menuitem id="menu_real_estate_root" name="Real Estate">
        <menuitem id="menu_real_estate_my_property" name="My Property">
            <menuitem id="menu_real_estate__my_property_action" action="my_property_action"/>
        </menuitem>
    </menuitem>



</odoo>